{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "'${relativeFile}'",
                "-o",
                "'${relativeFileDirname}/.bin/${fileBasenameNoExtension}.out'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make .bin",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "${relativeFileDirname}/.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}